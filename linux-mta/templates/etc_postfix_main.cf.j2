# Generated by Ansible at {{ lookup('pipe', 'hostname -f') }}
# Any changes made here will be overwritten

alias_maps = hash:/etc/aliases
append_dot_mydomain = no
biff = no
{% if linux_mta_postfix_version is version('3.0', '>=') %}
compatibility_level = 2
{% endif %}
inet_interfaces = loopback-only
mailbox_size_limit = 0
mynetworks = 127.0.0.0/8
recipient_delimiter = +

{% if linux_mta_postfix_relayhost %}
relayhost = {{ linux_mta_postfix_relayhost }}
{% else %}
default_transport = error
relay_transport = error
{% endif %}

{# Default is localdomain #}
{% if ansible_domain %}
mydomain = {{ ansible_domain }}
{% endif %}
{# Default is non-FQDN result from gethostname() plus ".$mydomain" #}
myhostname = {{ ansible_fqdn }}
{# Default is $myhostname, localhost.$mydomain, localhost #}
mydestination = $myhostname, {{ ansible_hostname }}, localhost.$mydomain, localhost
{# #}
{# #}
{# CentOS/RedHat specific settings #}
{% if ansible_os_family == "RedHat" %}

mailq_path = /usr/bin/mailq.postfix
newaliases_path = /usr/bin/newaliases.postfix
sendmail_path = /usr/sbin/sendmail.postfix
{% endif %}
{# #}
{# #}
